---
import Container from "../layouts/Container.astro";
---

<div class="certificates">
    <Container>
        <h1 class="certificates-header">Сертификаты</h1>
        <div class="certificate-boxes">
            <div class="vmock vmock1"></div>
            <div class="vmock vmock2"></div>
            <div class="hmock hmock1"></div>
            <div class="hmock hmock2"></div>
        </div>
    </Container>
</div>

<style>
    .certificates {
        background-color: white;
        box-shadow: 0px 40px 56px 14px var(--white) inset;
        padding-top: 100px;
        padding-bottom: 120px;
    }

    .certificates-header {
        text-align: center;
        font-size: 2.4rem;
        margin: 0;
        margin-bottom: 30px;
    }

    .certificate-boxes {
        display: grid;
        grid-template-rows: repeat(2, 275px);
        grid-template-columns: repeat(3, 400px);
        gap: 30px;
        justify-content: center;
    }

    .vmock {
        width: 400px;
        border-radius: 15px;
        background-color: gray;
        aspect-ratio: 9 / 13;
    }

    .vmock1 {
        grid-column: 1;
        grid-row: 1 / span 2;
    }

    .vmock2 {
        grid-column: 2;
        grid-row: 1 / span 2;
    }

    .hmock {
        grid-area: hmock;
        height: 275px;
        border-radius: 15px;
        background-color: gray;
        aspect-ratio: 4 / 3;
    }

    .hmock1 {
        grid-column: 3;
        grid-row: 1;
    }

    .hmock2 {
        grid-column: 3;
        grid-row: 2;
    }
</style>
