---
interface Props {
    id: string;
    name: string;
    type: "tel" | "email" | "text";
    placeholder?: string;
}

const { id, name, type, placeholder } = Astro.props;
---

<input
    id={id} name={name} type={type} class="input"
    placeholder={placeholder ? placeholder : undefined}
>

<style>
    .input {
        border: 0px;
        padding: 15px;
        font-size: inherit;
        border-radius: 10px;
        outline: 0;
        box-shadow: 0px 0px 0px 0px var(--accent);
        transition: all .3s ease 0s;
        margin-bottom: 10px;
    }

    .input:focus {
        transform: translateY(-5px);
        box-shadow: 0px 5px 0px 0px var(--accent);
    }
</style>
